# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS S3 Configuration (para logs)
S3_BUCKET_UNHANDLED=comafi-ai-logs

# Audit Configuration
AUDIT_ENABLED=true

# Backend: "sqlite" (default, sin dependencias extra) o "postgres"
AUDIT_BACKEND=sqlite

# SQLite — ruta al archivo (usado cuando AUDIT_BACKEND=sqlite)
AUDIT_DB_PATH=data/audit.db

# PostgreSQL — DSN completo (usado cuando AUDIT_BACKEND=postgres)
# POSTGRES_DSN=postgresql://audit_user:secret@localhost:5432/comafi_audit
# Con SSL (Supabase, RDS, etc.):
# POSTGRES_DSN=postgresql://user:pass@host/dbname?ssl=require
