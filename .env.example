# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=

# Redis Configuration
REDIS_HOST=
REDIS_PORT=

# Audit Configuration
AUDIT_ENABLED=true

# CloudWatch Logs — backend de observabilidad (serverless, sin base de datos)
# Todos los logs van a CloudWatch usando las credenciales AWS de arriba.

# Audit: registros individuales por evento (LLM call, tool call, etc.)
CW_LOG_GROUP_RECORDS=/comafi/audit/records

# Audit: resumen de sesión (snapshot actualizado por conversación)
CW_LOG_GROUP_SESSIONS=/comafi/audit/sessions

# Queries no identificadas por el NLP (intent=unknown o sin entidades)
CW_LOG_GROUP_UNHANDLED=/comafi/unhandled-queries

# Días de retención de todos los log groups (default: 90)
CW_RETENTION_DAYS=90
